<div class="container-fluid mt-4 d-flex justify-content-end pe-5">
  <%= render 'searches/search' %>
</div>

<div class="container mt-5">
  <h2 class="mb-4">
    <i class="fa-solid fa-users"></i>ユーザー一覧
  </h2>

  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-4 mb-3">
        <div class="text-center p-3 border rounded">
          <%= link_to user.name, user_path(user), class: 'text-dark text-decoration-none' %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-5">
    <%= link_to 'プラン一覧', plans_path, class: 'btn btn-outline-secondary btn-sm' %>
  </div>

</div>