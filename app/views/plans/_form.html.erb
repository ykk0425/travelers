<%= form_with(model: plan, local: true) do |form| %>
  <% if plan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(plan.errors.count, "error") %> prohibited this plan from being saved:</h2>

      <ul>
        <% plan.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :タイトル %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :旅行日 %>
      <%= form.date_select :start_date %>
        <span>~</span>
      <%= form.date_select :end_date %>
  </div>

  <div class="field">
    <%= form.label :プランについて %>
    <%= form.text_area :body %>
  </div>

  <div id="spots">
    <%= form.fields_for :spots do |spot_form| %>
      <%= render 'spot_fields', f: spot_form %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Add Spot', form, :spots %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
