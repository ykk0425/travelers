<div class="nested-fields">
  <div class="field">
    <%= f.label :name, 'スポット名' %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :image, '写真' %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :staying_start, '滞在日時' %>
    <%= f.datetime_select :staying_start %>
      <span>~</span>
    <%= f.datetime_select :staying_end %>
  </div>

  <div class="field">
    <%= f.label :latitude, '緯度' %>
    <%= f.text_field :latitude %>
  </div>

  <div class="field">
    <%= f.label :longitude, '経度' %>
    <%= f.text_field :longitude %>
  </div>
  
  <div class="field">
    <%= f.label :visit_order, '訪問順' %>
    <%= f.number_field :visit_order, min: 1 %>
  </div>


  <div class="field">
    <%= f.label :explanation, 'スポットについて' %>
    <%= f.text_area :explanation %>
  </div>

  <div id="routes">
    <%= f.fields_for :routes do |route_form| %>
      <%= render 'route_fields', f: route_form %>
    <% end %>
    <div class="links">
      <%= link_to_add_association '道追加', f, :routes %>
    </div>
  </div>

  <div class="actions">
    <%= link_to_remove_association 'スポット削除', f %>
  </div>

</div>
